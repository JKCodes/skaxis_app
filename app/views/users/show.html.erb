<% provide(:title, @user.name) %>
<div class='row'>
  <div class='col-md-6 col-md-offset-3 jumbotron profile'>
    <h1>
      <%= @user.name %>
    </h1>

    <h2 class="top">Status</h2>
    <h3><%= @user.status %></h3>

    <h2 class="top">About Me</h2>
    <h3><%= @user.description %></h3>

    <% if current_user?(@user) %>
      <%= link_to 'Update your Profile', edit_user_path(@user) %>
    <% end %>
  </div>
</div>
